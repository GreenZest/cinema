block body
  link(rel="stylesheet", href="/styles/snap.css", type="text/css")

  .snap
    .ui-widget.ui-helper-clearfix
      ul#gallery.gallery.ui-helper-reset.ui-helper-clearfix
        p.ui-widget-header
        each tag in alltags
          li.ui-widget-content.ui-corner-tr(data-id=tag.id)
            p.ui-widget-header= tag.name
    #trash.ui-widget-content.ui-state-default
      p.ui-widget-header
      ul#drophere.gallery.ui-helper-reset
  .clear
  #postall
    each post in posts
      .post(data-id=post.id)
        .title_post
          b
            a(href="/posts/" +post.id)= post.title
        .text_area
          p!= post.preview
          if post.tags
        .fortag
          ul
            each tag in post.tags
              li.draggable= tag.name
              li
            a(href="/posts/" +post.id+ "#disqus_thread")
